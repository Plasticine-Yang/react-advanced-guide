---
import Icon from 'astro-icon'

import config from '~/config'

const { title, logoIconName } = config
---

<section class="flex items-center gap-2">
  {logoIconName && <Icon name={logoIconName} class="w-6 h-6 md:w-8 md:h-8" />}
  {title && <span class="text-md  md:text-2xl font-bold">{title}</span>}
</section>
